{
  "manifest_version": 3,
  "name": "Pom-or-doro",
  "version": "1.0.0",
  "description": "A Pomodoro timer Chrome extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/extension.png",
      "32": "assets/images/extension.png",
      "48": "assets/images/extension.png",
      "128": "assets/images/extension.png"
    }
  },
  "options_page": "options.html",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/images/extension.png",
    "32": "assets/images/extension.png",
    "48": "assets/images/extension.png",
    "128": "assets/images/extension.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "default_locale": "en"
}