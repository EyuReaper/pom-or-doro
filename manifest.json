{
  "manifest_version": 3,
  "name": "Pom-or-doro",
  "version": "1.0.0",
  "description": "A Pomodoro timer made by an Ethiopian Chrome extension",
  "default_locale": "en",  
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "notifications",
    "offscreen",
    "sidePanel"
  ],
  "icons": {
    "16": "assets/images/pomordoro.png",
    "32": "assets/images/pomordoro.png",
    "48": "assets/images/pomordoro.png",
    "128": "assets/images/pomordoro.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/sounds/apple-bite-chew-40.mp3",
        "assets/sounds/rooster-crowing.mp3",
        "assets/images/*",
        "css/popup.css",
        "offscreen.html",
        "offscreen.js",
        "side_panel.html",
        "css/side_panel.css",
        "side_panel.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  }
}